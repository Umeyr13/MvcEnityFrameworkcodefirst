<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/jquery-3.6.4.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>

    <style>
        .navbar-collapse {
            display: block;
            margin: 14px;
            border: 3px none #b76565;
            padding: 5px;
        }

        #menu li {
            display: inline-block;
            width: min-content;
            height: min-content;
            border: 1px solid #000000;
            text-align: start;
            margin: 1px;
            background-color: #c0a92b
        }

        #menu a {
            text-decoration: none;
            color: black;
        }

        #menu li:hover {
            background-color: #ffd800;
        }

            #menu li:hover a {
                color: #808080;
            }
    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Anasayfa", "homepage", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav" id="menu">

                    <li>@Html.ActionLink("Anasayfa", "homepage", "Home")</li>
                    <li>@Html.ActionLink("Hakkımızda","Yeni", "Kisi")</li>
          
                    <b>StartView</b>
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        <hr />
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now - My ASP.NET Application</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-3.6.4.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>